<div class="block">
  <div class="fr-container fr-pt-3w fr-pt-md-7w fr-pb-3w">
    <h2>{{ title }}</h2>
    {{ description|class2wysiwygP('fr-text--lead')|raw }}

    <div class="fr-grid-row fr-grid-row--gutters fr-mt-3w fr-mb-3w">
      {% for movie in movies %}
        <div class="fr-col-12 fr-col-lg-6">
          {{ movie }}
        </div>
      {% endfor %}
    </div>


    <div class="fr-mb-3w">
      <div class="fr-btns-group--inline-md fr-btns-group--center fr-btns-group">
        {{ pattern('button', {
          label: cta.text,
          url: cta.url,
          target: cta.target,
          external: cta.external
        }, cta.style) }}
      </div>
    </div>
  </div>
</div>
