<div class="block">
  <div class="fr-container">
    <div class="fr-grid-row">
      <div class="fr-col-12">
        <div class="fr-pt-3w fr-pt-md-7w fr-pb-3w fr-pb-md-7w">
          <h1>{{ title }}</h1>

          <div>{{ text|raw }}</div>

          {% set header_cta = pattern('button', {
            label: cta.text,
            url: cta.url,
            target: cta.target,
            external: cta.external
          }, cta.style) %}

          {{ header_cta }}

          <div class="fr-mt-3w">{{ under_cta|raw|class2wysiwygP('fr-mb-0') }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
